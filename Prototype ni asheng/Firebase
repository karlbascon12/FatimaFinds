rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /found-posts/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

import { getAuth, signInAnonymously } from "firebase/auth";

const auth = getAuth();
signInAnonymously(auth)
  .then(() => {
    console.log("Signed in anonymously");
  })
  .catch((error) => {
    console.error(error);
  });